# Production Environment Variables Example
# Copy this to .env.production on your server

# Required Configuration
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_COMMENTS=false
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true

# WordPress Integration (Optional - Phase 4)
WORDPRESS_API_URL=https://cms.your-domain.com/wp-json/portfolio/v1
WORDPRESS_API_KEY=your-api-key-here
WORDPRESS_WEBHOOK_SECRET=your-webhook-secret

# Database (Optional - for future features)
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# Redis Cache (Optional - for Node.js deployment)
REDIS_URL=redis://localhost:6379

# Email Service (Optional - for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_EMAIL=contact@your-domain.com

# Monitoring & Alerts (Optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/XXX/YYY/ZZZ
DISCORD_WEBHOOK=https://discord.com/api/webhooks/XXX/YYY

# Security
CSRF_SECRET=generate-random-32-char-string
JWT_SECRET=generate-random-64-char-string

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# CDN Configuration (Optional)
CDN_URL=https://cdn.your-domain.com
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# Server Configuration (for deployment scripts)
DEPLOY_HOST=your-server.com
DEPLOY_USER=deploy
DEPLOY_PORT=22
DEPLOY_DIR=/var/www/portfolio
DEPLOYMENT_TYPE=static  # or 'node'