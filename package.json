{
  "name": "nextjs-business-boilerplate",
  "description": "A modern Next.js business website boilerplate with blog, landing pages, and TypeScript support. Built with Tailwind CSS and shadcn/ui components.",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run appinfo && cross-env PORT=6006 NODE_OPTIONS='--no-warnings' next dev",
    "build": "npm run appinfo && next build && cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/postbuild.mjs",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir app --dir components --dir lib --dir layouts --dir scripts",
    "pretty": "prettier --write .",
    "appinfo": "node ./scripts/generateAppInfo.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run lib/**/*.test.ts components/**/*.test.tsx",
    "test:integration": "vitest run src/tests/integration/",
    "test:performance": "vitest run src/tests/performance/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:docker": "cross-env BASE_URL=http://app:3000 playwright test",
    "test:docker": "docker-compose -f docker-compose.test.yml run --rm unit-tests",
    "test:docker:e2e": "docker-compose -f docker-compose.test.yml run --rm e2e-tests",
    "test:docker:all": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:clean": "docker-compose -f docker-compose.test.yml down -v && docker system prune -f",
    "test:local": "npm run test:unit && npm run test:integration",
    "test:full": "npm run test:local && npm run test:e2e",
    "test:ci": "npm run test:docker:all",
    "dev:test": "docker-compose -f docker-compose.test.yml up --build",
    "test:all": "npm run test && npm run test:e2e",
    "test:hooks": "node scripts/test-hooks.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@shipixen/pliny": "^2.3.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react-dom": "^19.1.5",
    "@vercel/analytics": "^1.5.0",
    "@vercel/og": "^0.6.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentlayer2": "0.5.7",
    "esbuild": "^0.25.3",
    "framer-motion": "^12.15.0",
    "github-slugger": "^2.0.0",
    "image-size": "^2.0.2",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.475.0",
    "mime-types": "^2.1.35",
    "next": "^15.3.2",
    "next-contentlayer2": "0.5.7",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.3.0",
    "rehype-katex": "^7.0.0",
    "rehype-katex-notranslate": "^1.1.4",
    "rehype-preset-minify": "^7.0.1",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.0",
    "remark-gfm": "^4.0.0",
    "remark-github-blockquote-alert": "^1.3.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.4.16",
    "tailwindcss-animate": "^1.0.7",
    "unist-util-visit": "^5.0.0",
    "vaul": "^1.1.2",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@next/bundle-analyzer": "^15.3.2",
    "@playwright/test": "^1.55.0",
    "@svgr/webpack": "^8.1.0",
    "@testcontainers/postgresql": "^11.5.1",
    "@testcontainers/redis": "^11.5.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mdx": "^2.0.13",
    "@types/react": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "c8": "^10.1.3",
    "commitlint": "^19.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-next": "^15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "msw": "^2.11.1",
    "postcss": "^8.5.4",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "typescript": "^5.7.3",
    "vfile": "^6.0.3",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "react": "^19.1.0",
    "next": "^15.3.2"
  },
  "resolutions": {
    "react": "^19.1.0",
    "next": "^15.3.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
